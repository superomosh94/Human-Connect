<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !=='undefined' ? title : 'Shared Reality' %> | Shared Reality
    </title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- PWA -->
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#8B5CF6">
    <link rel="apple-touch-icon" href="/img/icon-192.png">
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(reg => console.log('SW Registered'))
                    .catch(err => console.log('SW Registration Failed', err));
            });
        }

        // Fetch Notifications Count
        async function updateNotifBadge() {
            try {
                const response = await fetch('/api/notifications/unread-count');
                const data = await response.json();
                if (data.success && data.count > 0) {
                    const badge = document.getElementById('notif-badge');
                    if (badge) {
                        badge.textContent = data.count;
                        badge.style.display = 'block';
                    }
                }
            } catch (err) { console.error('Notif error:', err); }
        }
        document.addEventListener('DOMContentLoaded', updateNotifBadge);
    </script>
</head>

<body>

    <header class="site-header">
        <div class="container header-container">
            <a href="/" class="logo">
                <span class="logo-icon"><i class="fa-solid fa-shapes"></i></span>
                Shared Reality
            </a>

            <nav class="main-nav">
                <ul class="nav-list">
                    <li><a href="/"
                            class="<%= typeof page !== 'undefined' && page === 'home' ? 'active' : '' %>">Home</a></li>
                    <% if (typeof user !=='undefined' && user) { %>
                        <li><a href="/dashboard"
                                class="<%= typeof page !== 'undefined' && page === 'dashboard' ? 'active' : '' %>">Dashboard</a>
                        </li>
                        <li><a href="/simulator"
                                class="<%= typeof page !== 'undefined' && page === 'simulator' ? 'active' : '' %>">Simulator</a>
                        </li>
                        <li><a href="/daily-drill"
                                class="<%= typeof page !== 'undefined' && page === 'daily-drill' ? 'active' : '' %>">Daily
                                Drill</a>
                        </li>
                        <li><a href="/journal"
                                class="<%= typeof page !== 'undefined' && page === 'journal' ? 'active' : '' %>">Journal</a>
                        </li>
                        <li><a href="/community/shared-worlds"
                                class="<%= typeof page !== 'undefined' && page === 'shared-worlds' ? 'active' : '' %>">Community
                                Wall</a>
                        </li>
                        <li><a href="/playground/third-thing"
                                class="<%= typeof page !== 'undefined' && page === 'playground' ? 'active' : '' %>">Tool
                                Playground</a>
                        </li>
                        <li class="user-menu">
                            <span class="username">Hello, <%= user.username %></span>
                            <% if (user.is_admin) { %>
                                <a href="/admin/dashboard" class="nav-link" title="Admin Control"><i
                                        class="fa-solid fa-user-shield text-gold"></i></a>
                                <% } %>
                                    <a href="/notifications" class="nav-link position-relative" title="Notifications">
                                        <i class="fa-solid fa-bell"></i>
                                        <span id="notif-badge" class="badge badge-error"
                                            style="display: none; position: absolute; top: -5px; right: -5px; font-size: 0.6rem; padding: 2px 5px; border-radius: 50%; background: var(--error);"></span>
                                    </a>
                                    <a href="/settings" class="nav-link" title="Settings"><i
                                            class="fa-solid fa-cog"></i></a>
                                    <a href="/logout" class="btn btn-sm btn-outline"
                                        style="border: 1px solid rgba(255,255,255,0.2); padding: 5px 15px;">Logout</a>
                        </li>
                        <% } else { %>
                            <li><a href="/login"
                                    class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">Login</a>
                            </li>
                            <li><a href="/register" class="btn btn-sm btn-primary">Get Started</a></li>
                            <% } %>
                </ul>
            </nav>
        </div>
    </header>

    <main class="main-content">
        <% if (typeof success !=='undefined' && success.length> 0) { %>
            <div class="container" style="margin-top: 20px;">
                <div class="alert alert-success">
                    <%= success %>
                </div>
            </div>
            <% } %>

                <% if (typeof error !=='undefined' && error.length> 0) { %>
                    <div class="container" style="margin-top: 20px;">
                        <div class="alert alert-error">
                            <%= error %>
                        </div>
                    </div>
                    <% } %>