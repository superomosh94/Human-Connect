<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !=='undefined' ? title : 'Shared Reality' %> | Human Connect
    </title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
</head>

<body
    class="<%= (typeof page !== 'undefined' && (page === 'login' || page === 'register' || page === 'home')) ? 'auth-page' : '' %>">

    <% if (typeof user !=='undefined' && user && typeof page !=='undefined' && page !=='login' && page !=='register' &&
        page !=='home' ) { %>
        <div class="app-layout">
            <!-- Sidebar Partial -->
            <%- include('../partials/sidebar') %>

                <div class="main-content">
                    <header class="site-header">
                        <div class="header-container">
                            <div class="d-flex align-items-center">
                                <div class="mobile-toggle">
                                    <i class="fa-solid fa-bars"></i>
                                </div>
                                <div class="header-title ml-3">
                                    <%= typeof title !=='undefined' ? title : 'Dashboard' %>
                                </div>
                            </div>

                            <div class="user-menu">
                                <div class="d-flex align-items-center gap-3">
                                    <span class="text-muted d-none d-md-block">Welcome, <strong>
                                            <%= user.username %>
                                        </strong></span>
                                    <div class="avatar-circle"
                                        style="width: 38px; height: 38px; background: linear-gradient(135deg, var(--primary), var(--secondary)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; box-shadow: 0 4px 10px rgba(0,0,0,0.3);">
                                        <%= user.username.charAt(0).toUpperCase() %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </header>
                    <main>
                        <% } else if (typeof page !=='undefined' && (page==='login' || page==='register' ||
                            page==='home' )) { %>
                            <!-- Simple Top Nav for Landing/Auth -->
                            <header class="site-header">
                                <div class="container header-container">
                                    <a href="/" class="logo">
                                        <span class="logo-text">Human<span class="highlight">Connect</span></span>
                                    </a>
                                    <nav>
                                        <ul class="nav-list">
                                            <% if (typeof user !=='undefined' && user) { %>
                                                <li><a href="/dashboard" class="btn btn-primary btn-sm">Dashboard</a>
                                                </li>
                                                <% } else { %>
                                                    <li><a href="/login" class="nav-link">Login</a></li>
                                                    <li><a href="/register" class="btn btn-primary btn-sm">Join</a></li>
                                                    <% } %>
                                        </ul>
                                    </nav>
                                </div>
                            </header>
                            <main>
                                <% } else { %>
                                    <!-- Fallback if user is null but page is an app page (shouldn't happen with auth middleware) -->
                                    <main>
                                        <% } %>