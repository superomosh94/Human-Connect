<%- include('../partials/header') %>

    <div class="container dashboard-container reveal" style="max-width: 700px; padding-top: 40px;">
        <div class="dashboard-header mb-4 reveal-delay-1">
            <h2>Your <span class="highlight">Notifications</span></h2>
            <p class="text-muted">Stay updated with your shared worlds and community activity.</p>
        </div>

        <div id="notif-list" class="list-group">
            <div class="text-center p-5">
                <i class="fa-solid fa-spinner fa-spin fa-2x text-gold"></i>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const list = document.getElementById('notif-list');
            try {
                const response = await fetch('/api/notifications');
                const data = await response.json();

                if (data.success) {
                    if (data.notifications.length === 0) {
                        list.innerHTML = '<div class="feature-card text-center"><p class="text-muted">No notifications yet.</p></div>';
                    } else {
                        list.innerHTML = data.notifications.map(n => `
                        <div class="feature-card mb-3 d-flex align-items-center justify-content-between ${n.is_read ? 'opacity-75' : 'border-primary'}" onclick="markAsRead(${n.id}, '${n.link}')" style="cursor: pointer;">
                            <div class="d-flex align-items-center gap-3">
                                <div class="icon-box" style="color: ${getIconColor(n.type)};">
                                    <i class="${getIcon(n.type)}"></i>
                                </div>
                                <div>
                                    <p class="mb-0 text-light">${n.content}</p>
                                    <small class="text-muted">${new Date(n.created_at).toLocaleString()}</small>
                                </div>
                            </div>
                            ${!n.is_read ? '<span class="badge badge-primary">New</span>' : ''}
                        </div>
                    `).join('');
                    }
                }
            } catch (err) {
                list.innerHTML = '<p class="text-danger text-center">Failed to load notifications.</p>';
            }
        });

        function getIcon(type) {
            switch (type) {
                case 'like': return 'fa-solid fa-heart';
                case 'comment': return 'fa-solid fa-comment';
                case 'drill': return 'fa-solid fa-fire';
                default: return 'fa-solid fa-bell';
            }
        }

        function getIconColor(type) {
            switch (type) {
                case 'like': return 'var(--error)';
                case 'comment': return 'var(--secondary)';
                case 'drill': return 'var(--accent)';
                default: return 'var(--primary)';
            }
        }

        async function markAsRead(id, link) {
            try {
                await fetch(`/api/notifications/${id}/read`, { method: 'PUT' });
                if (link) window.location.href = link;
                else location.reload();
            } catch (err) { console.error(err); }
        }
    </script>

    <%- include('../partials/footer') %>