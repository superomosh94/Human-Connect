<%- include('../partials/header') %>

    <div class="container dashboard-container py-4">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h2 class="mb-1">Control <span class="highlight">Center</span></h2>
                <p class="text-muted">Overview of the Human Connect ecosystem.</p>
            </div>
        </div>

        <!-- Stats Row -->
        <div class="row mb-5">
            <div class="col-md-4">
                <div class="feature-card text-center" style="border-bottom: 4px solid var(--primary);">
                    <div class="stat-icon mb-2 text-primary"><i class="fa-solid fa-users fa-2x"></i></div>
                    <h2 class="mb-0">
                        <%= stats.users %>
                    </h2>
                    <small class="text-muted text-uppercase font-weight-bold">Total Explorers</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center" style="border-bottom: 4px solid var(--secondary);">
                    <div class="stat-icon mb-2 text-secondary"><i class="fa-solid fa-fire fa-2x"></i></div>
                    <h2 class="mb-0">
                        <%= stats.drills %>
                    </h2>
                    <small class="text-muted text-uppercase font-weight-bold">Drills Completed</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center" style="border-bottom: 4px solid var(--accent);">
                    <div class="stat-icon mb-2 text-gold"><i class="fa-solid fa-globe fa-2x"></i></div>
                    <h2 class="mb-0">
                        <%= stats.worlds %>
                    </h2>
                    <small class="text-muted text-uppercase font-weight-bold">Shared Worlds</small>
                </div>
            </div>
        </div>

        <!-- Content Split Row -->
        <div class="row">
            <div class="col-md-8">
                <div class="feature-card mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="mb-0">Recent <span class="highlight">Signups</span></h4>
                        <a href="/admin/users" class="btn btn-sm btn-outline">View All Users</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-dark-custom">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Joined</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentUsers.forEach(u=> { %>
                                    <tr>
                                        <td><i class="fa-solid fa-circle-user mr-2 opacity-50"></i>
                                            <%= u.username %>
                                        </td>
                                        <td class="text-muted">
                                            <%= u.email %>
                                        </td>
                                        <td class="text-muted">
                                            <%= new Date(u.created_at).toLocaleDateString() %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <h4 class="mb-4">System <span class="highlight">Actions</span></h4>
                    <div class="d-grid gap-3">
                        <a href="/admin/content"
                            class="btn btn-outline w-100 d-flex align-items-center justify-content-between">
                            Manage Content <i class="fa-solid fa-arrow-right"></i>
                        </a>
                        <button class="btn btn-outline w-100 d-flex align-items-center justify-content-between"
                            style="opacity: 0.5;" disabled>
                            View System Logs <i class="fa-solid fa-lock"></i>
                        </button>
                        <button
                            class="btn btn-primary w-100 mt-3 d-flex align-items-center justify-content-center gap-2">
                            <i class="fa-solid fa-plus"></i> New Scenario
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .table-dark-custom {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
            color: var(--text-main);
        }

        .table-dark-custom th {
            border: none;
            padding: 15px;
            color: var(--text-muted);
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .table-dark-custom td {
            background: rgba(255, 255, 255, 0.02);
            padding: 15px;
            border: none;
        }

        .table-dark-custom tr:hover td {
            background: rgba(255, 255, 255, 0.05);
        }

        .table-dark-custom td:first-child {
            border-radius: 8px 0 0 8px;
        }

        .table-dark-custom td:last-child {
            border-radius: 0 8px 8px 0;
        }
    </style>

    <%- include('../partials/footer') %>