<%- include('../partials/header') %>

    <div class="container dashboard-container">
        <div class="row mb-4">
            <div class="col-12">
                <h2>Admin <span class="highlight">Control Panel</span></h2>
                <p class="text-muted">System-wide overview and content moderation.</p>
            </div>
        </div>

        <!-- Stats Row -->
        <div class="row mb-5">
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="icon-box mx-auto" style="color: var(--primary);"><i class="fa-solid fa-users"></i></div>
                    <h3 class="mt-2">
                        <%= stats.users %>
                    </h3>
                    <p class="text-muted">Total Travelers</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="icon-box mx-auto" style="color: var(--secondary);"><i
                            class="fa-solid fa-earth-americas"></i></div>
                    <h3 class="mt-2">
                        <%= stats.worlds %>
                    </h3>
                    <p class="text-muted">Co-Created Worlds</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="icon-box mx-auto" style="color: var(--success);"><i class="fa-solid fa-bolt"></i></div>
                    <h3 class="mt-2">
                        <%= stats.activeToday %>
                    </h3>
                    <p class="text-muted">Active Today</p>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Recent Users -->
            <div class="col-md-6 mb-4">
                <div class="feature-card h-100">
                    <h4 class="mb-4">Newest Travelers</h4>
                    <div class="table-responsive">
                        <table class="table text-light">
                            <thead>
                                <tr class="text-muted">
                                    <th>Username</th>
                                    <th>Joined</th>
                                    <th>Lvl</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentUsers.forEach(u=> { %>
                                    <tr>
                                        <td>
                                            <%= u.username %>
                                        </td>
                                        <td class="small">
                                            <%= new Date(u.created_at).toLocaleDateString() %>
                                        </td>
                                        <td><span class="badge badge-outline">
                                                <%= u.level %>
                                            </span></td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Latest Worlds / Moderation -->
            <div class="col-md-6 mb-4">
                <div class="feature-card h-100">
                    <h4 class="mb-4">Recent Shared Worlds</h4>
                    <div class="list-group list-group-flush">
                        <% latestWorlds.forEach(w=> { %>
                            <div
                                class="list-group-item bg-transparent border-border d-flex justify-content-between align-items-center px-0">
                                <div>
                                    <p class="mb-0 text-light">
                                        <%= w.scenario_context %>
                                    </p>
                                    <small class="text-muted">By <%= w.username || 'Anonymous' %></small>
                                </div>
                                <button class="btn btn-sm btn-outline text-danger border-danger"
                                    onclick="deleteWorld(<%= w.id %>, this)">
                                    <i class="fa-solid fa-trash-can"></i>
                                </button>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function deleteWorld(id, btn) {
            if (!confirm('Are you sure you want to delete this world?')) return;

            try {
                const response = await fetch(`/admin/world/${id}`, { method: 'DELETE' });
                const data = await response.json();
                if (data.success) {
                    btn.closest('.list-group-item').remove();
                } else {
                    alert(data.error);
                }
            } catch (err) {
                console.error(err);
                alert('Error deleting world.');
            }
        }
    </script>

    <style>
        .table th {
            border-top: none;
        }

        .table td {
            border-top: 1px solid var(--border);
        }

        .badge-outline {
            border: 1px solid var(--primary);
            color: var(--primary);
            padding: 2px 8px;
            border-radius: 4px;
        }
    </style>

    <%- include('../partials/footer') %>