<%- include('../partials/header') %>

    <div class="container dashboard-container py-4">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h2 class="mb-1">Explorer <span class="highlight">Management</span></h2>
                <p class="text-muted">Monitor and manage all participants in the co-creation network.</p>
            </div>
        </div>

        <div class="feature-card">
            <div class="table-responsive">
                <table class="table table-dark-custom">
                    <thead>
                        <tr>
                            <th>Explorer</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Level</th>
                            <th>Progress</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(u=> { %>
                            <tr data-user-id="<%= u.id %>">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle mr-3"
                                            style="width: 32px; height: 32px; background: var(--bg-dark); border: 1px solid var(--border); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.8rem;">
                                            <%= u.username.charAt(0).toUpperCase() %>
                                        </div>
                                        <%= u.username %>
                                    </div>
                                </td>
                                <td class="text-muted">
                                    <%= u.email %>
                                </td>
                                <td>
                                    <select class="role-select" onchange="updateRole(<%= u.id %>, this.value)">
                                        <option value="user" <%=u.role==='user' ? 'selected' : '' %>>User</option>
                                        <option value="admin" <%=u.role==='admin' ? 'selected' : '' %>>Admin</option>
                                    </select>
                                </td>
                                <td><span class="badge badge-primary">Lv. <%= u.level %></span></td>
                                <td>
                                    <small class="text-muted">
                                        <%= u.xp_points %> XP
                                    </small>
                                </td>
                                <td><span class="text-success"><i class="fa-solid fa-circle-check"></i> Active</span>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <style>
        .role-select {
            background: var(--bg-dark);
            border: 1px solid var(--border);
            color: var(--text-main);
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 0.9rem;
            cursor: pointer;
        }

        .role-select:focus {
            outline: none;
            border-color: var(--primary);
        }

        .table-dark-custom {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

        .table-dark-custom td {
            background: rgba(255, 255, 255, 0.02);
            padding: 15px;
            border: none;
            vertical-align: middle;
        }

        .table-dark-custom td:first-child {
            border-radius: 8px 0 0 8px;
        }

        .table-dark-custom td:last-child {
            border-radius: 0 8px 8px 0;
        }
    </style>

    <script>
        async function updateRole(userId, newRole) {
            try {
                const res = await fetch('/admin/users/update-role', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ userId, role: newRole })
                });
                const data = await res.json();
                if (data.success) {
                    alert('Role updated successfully.');
                } else {
                    alert('Error updating role: ' + data.error);
                }
            } catch (err) {
                console.error(err);
            }
        }
    </script>

    <%- include('../partials/footer') %>